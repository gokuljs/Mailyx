generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String    @id @default(cuid())
    emailAddress String    @unique
    firstName    String?
    lastName     String?
    imageUrl     String?
    Account      Account[]
}

model Account {
    id             String  @id @default(cuid())
    userId         String
    emailAddress   String
    accessToken    String  @unique
    name           String
    user           User    @relation(fields: [userId], references: [id])
    nextDeltaToken String?
}
